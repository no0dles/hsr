{
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES2015",
    "strict": true,
    "composite": true,
    "declaration": true,
    "outDir": "dist/test",
    "lib": ["es6", "dom"],
    "strictNullChecks": true,
    "types": ["@types/node"],
    "rootDir": "packages",
    "baseUrl": "packages",
    "tsBuildInfoFile": "dist/test.tsbuildinfo"
  },
  "references": [
    {
      "path": "./packages/hsr-browser/tsconfig.json"
    },
    {
      "path": "./packages/hsr-browser-rpc/tsconfig.json"
    },
    {
      "path": "./packages/hsr-node/tsconfig.json"
    },
    {
      "path": "./packages/hsr-node-rpc/tsconfig.json"
    },
    {
      "path": "./packages/hsr-node-typescript/tsconfig.json"
    }
  ],
  "include": ["packages/**/*.spec"],
  "exclude": [
    "dist",
    "coverage",
    "node_modules",
    "jest.config.ts"
  ]
}
