{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "strict": true,
    "composite": true,
    "declaration": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "lib": [
      "es6"
    ],
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@no0dles/hsr-node/*": ["../../hsr-node/src/*"],
      "@no0dles/hsr-browser-rpc/*": ["../../hsr-browser-rpc/src/*"]
    },
    "tsBuildInfoFile": "dist/tsbuildinfo"
  },
  "references": [
    {
      "path": "../hsr-node/tsconfig.json"
    },
    {
      "path": "../hsr-browser-rpc/tsconfig.json"
    }
  ]
}
