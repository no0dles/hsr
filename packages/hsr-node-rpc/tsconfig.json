{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "strict": true,
    "composite": true,
    "declaration": true,
    "outDir": "dist/esm",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "lib": [
      "es6",
      "ES2020"
    ],
    "rootDir": "src",
    "baseUrl": "src",
    "tsBuildInfoFile": "dist/tsbuildinfo"
  },
  "references": [
    {
      "path": "../hsr-node/tsconfig.json"
    },
    {
      "path": "../hsr-browser-rpc/tsconfig.json"
    }
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
