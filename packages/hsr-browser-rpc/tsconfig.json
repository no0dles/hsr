{
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES2015",
    "strict": true,
    "composite": true,
    "moduleResolution": "node",
    "outDir": "dist/esm",
    "strictNullChecks": true,
    "lib": [
      "dom",
      "es6"
    ],
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@no0dles/hsr-browser/*": ["../../hsr-browser/src/*"]
    },
    "tsBuildInfoFile": "dist/tsbuildinfo"
  },
  "references": [
    {
      "path": "../hsr-browser/tsconfig.json"
    }
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
